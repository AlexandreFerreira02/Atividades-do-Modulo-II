# Atividade 5

class Cachorro:
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade

    def falar(self):
        print('Au au, meu nome é', self.nome, 'e tenho', self.idade, 'anos')

    def aniversario(self):
        self.idade += 1
        print(self.nome, 'fez aniversário! Agora tem', self.idade, 'anos')

dog1 = Cachorro('Amora', 10)

dog1.falar()
dog1.aniversario()

# Atividade 6

class ContaBancaria:
    def __init__(self, titular, saldo=0):
        self.titular = titular
        self.saldo = saldo

    def depositar(self, valor):
        if valor > 0:
            self.saldo += valor
            print(f'Depósito de R$ {valor} realizado. Saldo atual: R$ {self.saldo}')
        else:
            print('Valor de depósito inválido.')

    def sacar(self, valor):
        if valor > 0:
            if self.saldo >= valor:
                self.saldo -= valor
                print(f'Saque de R$ {valor} realizado. Saldo atual: R$ {self.saldo}')
            else:
                print('Saldo insuficiente para o saque.')
        else:
            print('Valor de saque inválido.')

conta1 = ContaBancaria('Maria', 100)

conta1.depositar(50)
conta1.sacar(30)
conta1.sacar(150)  

# Atividade 7

class Pessoa:
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade

class Estudante(Pessoa):
    def __init__(self, nome, idade, matricula, curso):
        super().__init__(nome, idade)  
        self.matricula = matricula
        self.curso = curso

    def mostrar_dados(self):
        print(f'Nome: {self.nome}')
        print(f'Idade: {self.idade}')
        print(f'Matrícula: {self.matricula}')
        print(f'Curso: {self.curso}')

estudante1 = Estudante('Alexandre', 23, '01', 'Python')
estudante1.mostrar_dados()

# Atividade 8

class Pessoa:
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade

class Funcionario(Pessoa):
    def __init__(self, nome, idade, salario):
        super().__init__(nome, idade)  
        self.salario = salario

    def calcular_13_salario(self):
        decimo_terceiro = self.salario  
        print(f'{self.nome} receberá R$ {decimo_terceiro} de 13º salário.')

funcionario1 = Funcionario('Alexandre', 23, 5000)
funcionario1.calcular_13_salario()

funcionario2 = Funcionario('Sophia', 18, 3500)
funcionario2.calcular_13_salario()

# Atividade 9

class Pessoa:
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade

class Funcionario(Pessoa):
    def __init__(self, nome, idade, salario):
        super().__init__(nome, idade)
        self.salario = salario

    def calcular_13_salario(self):
        print(f'{self.nome} receberá R$ {self.salario} de 13º salário.')

class Professor(Funcionario):
    def __init__(self, nome, idade, salario, disciplina):
        super().__init__(nome, idade, salario)
        self.disciplina = disciplina

    def lecionar(self):
        print(f'Professor {self.nome} leciona {self.disciplina}.')

professor1 = Professor('Alexandre', 23, 6000, 'Matemática')
professor1.lecionar()
professor1.calcular_13_salario()

# Atividade 10 

class Artista:
    def apresentar(self):
        print('Sou artista')

class Programador:
    def apresentar(self):
        print('Sou programador')

class PessoaMultiTalento(Artista, Programador):
    pass

pessoa = PessoaMultiTalento()
pessoa.apresentar()

# Atividade 11 

class Artista:
    def apresentar(self):
        print('Sou artista')
        super().apresentar()  

class Programador:
    def apresentar(self):
        print('Sou programador')
        super().apresentar()  

class PessoaBase:
    def apresentar(self):
        pass  

class PessoaMultiTalento(Artista, Programador, PessoaBase):
    pass

pessoa = PessoaMultiTalento()
pessoa.apresentar()

# Atividade 12

class Pessoa:
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade

    def mostrar_dados(self):
        print(f'Nome: {self.nome}, Idade: {self.idade}')

class Aluno(Pessoa):
    def __init__(self, nome, idade, matricula):
        super().__init__(nome, idade)
        self.matricula = matricula
        self.notas = []

    def cadastrar_nota(self, nota):
        if 0 <= nota <= 10:
            self.notas.append(nota)
            print(f'Nota {nota} cadastrada para {self.nome}')
        else:
            print('Nota inválida! Deve estar entre 0 e 10.')

    def calcular_media(self):
        if self.notas:
            media = sum(self.notas) / len(self.notas)
            return media
        else:
            return 0

    def mostrar_dados(self):
        super().mostrar_dados()
        print(f'Matrícula: {self.matricula}')
        print(f'Notas: {self.notas}')
        print(f'Média: {self.calcular_media():.2f}')

class Professor(Pessoa):
    def __init__(self, nome, idade, disciplina, salario):
        super().__init__(nome, idade)
        self.disciplina = disciplina
        self.salario = salario

    def mostrar_dados(self):
        super().mostrar_dados()
        print(f'Disciplina: {self.disciplina}')
        print(f'Salário: R$ {self.salario}')

aluno1 = Aluno('Alexandre', 23, '01')
aluno1.cadastrar_nota(8)
aluno1.cadastrar_nota(7)
aluno1.cadastrar_nota(9)

aluno2 = Aluno('Sophia', 17, '02')
aluno2.cadastrar_nota(6)
aluno2.cadastrar_nota(9)

professor1 = Professor('Carlos', 40, 'Matemática', 5000)
professor2 = Professor('Ronaldo', 35, 'História', 4500)

print('\n--- Alunos ---')
aluno1.mostrar_dados()
aluno2.mostrar_dados()

print('\n--- Professores ---')
professor1.mostrar_dados()
professor2.mostrar_dados()










