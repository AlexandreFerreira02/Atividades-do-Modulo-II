# Atividade 1

class Carro:
    def __init__(self, marca, modelo):
        self.marca = marca
        self.modelo = modelo

carro1 = Carro('Toyota', 'Corolla')
carro2 = Carro('Ford', 'Fiesta')

print('Carro 1:', carro1.marca, '-', carro1.modelo)
print('Carro 2:', carro2.marca, '-', carro2.modelo)

# Atividade 2

class Cachorro:
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade

    def falar(self):
        print('Au au, meu nome é', self.nome, 'e tenho', self.idade, 'anos')

dog1 = Cachorro('Amora', 10)
dog1.falar()

# Atividade 3

class Livro:
    def __init__(self, titulo, autor, ano):
        self.titulo = titulo
        self.autor = autor
        self.ano = ano

livro1 = Livro('Dom Casmurro', 'Machado de Assis', 1899)
livro2 = Livro('A Hora da Estrela', 'Clarice Lispector', 1977)
livro3 = Livro('1984', 'George Orwell', 1949)

print('Livro 1:', livro1.titulo, '-', livro1.autor, '-', livro1.ano)
print('Livro 2:', livro2.titulo, '-', livro2.autor, '-', livro2.ano)
print('Livro 3:', livro3.titulo, '-', livro3.autor, '-', livro3.ano)

